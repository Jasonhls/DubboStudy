<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo.xsd
        ">

    <!--spring的扫描-->
    <context:component-scan base-package="com.cn.service.impl"></context:component-scan>

    <!--1、指定当前服务/应用的名子（同样的服务名子相同，不要和别的服务同名）-->
    <dubbo:application name="dubbo-service-consumer"></dubbo:application>

    <!--2、指定注册中心的位置-->
    <!--    <dubbo:registry address="zookeeper://127.0.0.1:2181"></dubbo:registry>-->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"></dubbo:registry>

    <!--3、声明需要调用的远程服务的接口，生成远程服务代理-->
    <!--以timeout为例，显示配置的查找顺序，也就是优先级：
    方法级优先，接口级次之，全局配置再次之。
    如果级别一样，则消费方优先，提供方次之。
    -->
    <!--指定整个类中所有方法的超时时间-->
    <dubbo:reference interface="com.cn.service.UserService" timeout="5000">
        <!--明确指定某一个方法的超时时间-->
        <dubbo:method name="getUserAddressList" timeout="1000"></dubbo:method>
    </dubbo:reference>

    <!--配置连接监控中心-->
    <dubbo:monitor protocol="register"></dubbo:monitor>
    <!--    <dubbo:monitor address="127.0.0.1:7070"></dubbo:monitor>-->

    <!--配置当前消费者的统一规则,这些属性既可以统一在dubbo:consumer标签中配置，也可以在dubbo:reference标签中配置，
    check=false表示所有的服务启动时都不检查,timeout请求超时时间，单位为毫秒，默认是1000，-->
    <dubbo:consumer check="false" timeout="1000"></dubbo:consumer>


</beans>